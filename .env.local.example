# Application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# API Keys for cryptocurrency data
NEXT_PUBLIC_COINMARKETCAP_API_KEY=your_coinmarketcap_api_key
NEXT_PUBLIC_COINGECKO_API_KEY=your_coingecko_api_key

# NextAuth.js Configuration
# Generate a secret with: `openssl rand -base64 32`
NEXTAUTH_SECRET=your_nextauth_secret
NEXTAUTH_URL=http://localhost:3000

# Database Connection String (if using a database)
DATABASE_URL=your_database_connection_string

# OpenAI API Key (for AI article generation)
OPENAI_API_KEY=your_openai_api_key

# Note: For production deployment, set these environment variables in your hosting provider's
# dashboard (e.g., Vercel). Never commit real API keys to your repository.